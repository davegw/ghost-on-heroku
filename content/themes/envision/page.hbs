{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Page template start}}
{{#post}}
<article class="{{post_class}}">

<header id="head-wsong">
	{{> menu}}

	<div id="mobile-menu-btn-wsong"><span class="fa fa-reorder"></span></div>

	<div id="inside-head-wsong">

		{{#if feature_image}}
		<div id="inside-head-cover-wsong" style="background-image:url({{img_url feature_image}});"></div>
		{{/if}}

		<div id="in-post-meta" class="diffuse-elements">
			<h1 id="in-post-page-title">{{title}}</h1>
		</div>

	</div>
</header>

<section id="in-post-content">
{{! No indention to prevent handlebars indenting <pre> tag content}}
{{! https://github.com/roryg/ghostwriter/pull/65}}
{{content}}
</section>

</article>
{{/post}}
